{% extends '::base.html.twig' %}
{% block title %}Game Projects{% endblock %}

{% block content %}
<h1>GameProject list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Tagline</th>
            <th>Platform</th>
            <th>Genre</th>
            <th>Languages</th>
            <th>Responsibilities</th>
            <th>Download</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('gameproject_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.tagline }}</td>
            <td>{{ entity.platform }}</td>
            <td>{{ entity.genre }}</td>
            <td>{{ entity.languages }}</td>
            <td>{{ entity.responsibilities }}</td>
            <td>{{ entity.download }}</td>
            <td>{{ entity.content }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('gameproject_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('gameproject_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('gameproject_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}
