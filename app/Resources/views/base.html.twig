<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('less/base.less') }}" rel="stylesheet/less" type="text/css">
            <link href='http://fonts.googleapis.com/css?family=Exo:200,400,600,900' rel='stylesheet' type='text/css'>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="{{ asset('css/lightbox.css') }}" rel="stylesheet" />
        {% block headerscripts %}
            <script src="{{ asset('js/less-1.3.0.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/jquery-1.8.2.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/jquery.textarea.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/lightbox.js') }}" type="text/javascript"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div id="header">
                {% block header %}
                    <div id="info-bar-container">
                        <div id="info-bar">
                            <div id="namebar">
                                <p>Alexander</p>
                                <p>Fisher</p>
                                <p>Programmer Extraordinaire</p>
                            </div>
                            <div id="socialbar">
                                <a href="#"><img src="{{ asset('img/facebook-icon.jpg') }}" alt="facebook"></a>
                                <a href="#"><img src="{{ asset('img/twitter-icon.jpg') }}" alt="twitter"></a>
                                <!-- <a href="#"><img src="img/google-plus.jpg" alt="google-plus"></a> -->
                            </div>
                        </div>
                    </div>
                    <div id="navbar-container">    
                        <div id="navbar">
                            <ul>
                                <li><a href="{{ path('project_index') }}">Home</a></li>
                                {% render "FishPortfolioBundle:Category:categoryNav" %}
                                <li><a href="#">Resume</a></li>
                                <li><a href="#">Contact</a></li>
                                <li><a href="#">Bio</a></li>
                                <li><a href="#">Tutorials</a></li>
                                {% if is_granted('ROLE_USER') %} 
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li>
                                            <a href="#">Admin</a>
                                            <ul>
                                                <li><a href="{{ path('admin_category_index') }}">Categories</a></li>
                                                <li><a href="{{ path('admin_gallery_index') }}">Galleries</a></li>
                                                <li><a href="{{ path('admin_project_index') }}">Projects</a></li>
                                            </ul>
                                        </li>
                                    {% endif %}
                                    <li><a href="{{ path('logout') }}">Logout</a></li>
                                {% else %}
                                    <li><a href="{{ path('login') }}">Login</a></li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                {% endblock %}
            </div>
            <div id="wrapper">
                <div id="content">
                    {% block content %}
                    {% endblock %}
                </div>
                <div id="footer">
                    {% block footer %}
                        <hr/>
                        <div id="navbar-footer">
                            <ul>
                                <li><a href="{{ path('project_index') }}">Home</a></li>
                                {% render "FishPortfolioBundle:Category:categoryNav" %}
                                <li><a href="#">Resume</a></li>
                                <li><a href="#">Contact</a></li>
                                <li><a href="#">Bio</a></li>
                                <li><a href="#">Tutorials</a></li>
                                {% if is_granted('ROLE_USER') %} 
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><a href="#">Admin</a></li>
                                    {% endif %}
                                    <li><a href="{{ path('logout') }}">Logout</a></li>
                                {% else %}
                                    <li><a href="{{ path('login') }}">Login</a></li>
                                {% endif %}
                            </ul>
                        </div>
                        <div id="copyright">
                            <p>&copy 2012 Alexander Fisher</p>
                        </div>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
